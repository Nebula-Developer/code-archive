{
    "$schema": "https://json.schemastore.org/chrome-manifest",
    "manifest_version": 2,
    "version": "0.0.1",
    "name": "School Extension",
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "lib/socket.io.min.js",
                "lib/jquery.min.js",
                "lib/interact.min.js",
                "gui.js",
                "content.js"
            ],
            "css": [
                "css/main.css"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "assets/icons/close.svg",
        "assets/icons/minimize.svg",
        "assets/icons/maximize.svg"
    ]
}