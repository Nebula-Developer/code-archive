<%- include('../header') %>

<div class="flex-column">
    <div class="content-header flex-row">
        <div class="content-header-text flex-column">
            <span style="font-size: 30px;">Content</span> <br>
            Search and filter content
        </div>

        <div class="content-header-filters flex-row">
            <div class="content-filter flex-column">
                <div class="content-filter-header">Age Group</div>
                <select class="content-filter-select">
                    <option value="all">All</option>
                    <option value="junior">Junior</option>
                    <option value="intermediate">Intermediate</option>
                    <option value="senior">Senior</option>
                </select>
            </div>

            <div class="content-filter flex-column">
                <div class="content-filter-header">Subject</div>
                <select class="content-filter-select">
                    <option value="all">All</option>
                    <option value="history">History</option>
                    <option value="geography">Geography</option>
                    <option value="social-studies">Social Studies</option>
                </select>
            </div>

            <div class="content-filter flex-column">
                <div class="content-filter-header">Type</div>
                <select class="content-filter-select">
                    <option value="all">All</option>
                    <option value="lesson-plan">Lesson Plan</option>
                    <option value="resource">Resource</option>
                    <option value="activity">Activity</option>
                </select>
            </div>
        </div>

        <div class="content-header-search flex-column">
            <div class="content-header-search-header">Search</div>
            <input type="text" class="content-header-search-input">
        </div>
    </div>
</div>

<style>
    .content-header {
        padding: 100px;
        background: rgb(89, 169, 255);
        color: white;
    }

    .content-header-filters {
        margin-left: 30px;
    }

    .content-filter {
        margin-left: 20px;
    }

    .content-header-search {
        margin-left: 30px;
    }
</style>

<%- include('../footer') %>
