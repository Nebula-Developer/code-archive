        color: white;
        text-align: center;
        line-height: 60px;
    }

    .home-gallery-index {
        min-width: 250px;
        max-width: 250px;
        padding-right: 50px;
    }

    .home-gallery-title {
        font-size: 20px;
        margin-bottom: 20px;
        background: rgb(95, 156, 207);
        padding: 10px;
        color: white;
    }

    .home-gallery-item {
        margin-bottom: 20px;
        color: rgb(101, 101, 101);
    }

    .home-gallery-item-date {
        font-size: 15px;
        color: rgb(144, 144, 144);
    }

    .home-gallery-item-link {
        font-size: 15px;
        color: rgb(95, 156, 207);
    }
    
    .home-section-grid-title {
        padding: 0 100px;
        padding-bottom: 30px;
        margin: 0;
        margin-top: 80px;
        font-weight: 400;
        font-size: 45px;
        background: linear-gradient(45deg, #4187d7, #7de8b1, #4187d7);
        background-size: 50%;
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .home-section-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, 33%);
        padding: 0 100px;
    }

    @media screen and (max-width: 900px) {
