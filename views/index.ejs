            grid-template-columns: repeat(auto-fit, 100%);
        }
    }

    .home-section-grid-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: white;
        padding: 50px;
        font-size: 20px;
        font-weight: 600;
        text-align: center;
        height: 140px;
        cursor: pointer;
        text-decoration: none;
    }

    .home-section-grid-item i {
