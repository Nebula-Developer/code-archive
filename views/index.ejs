<%- include('header') %>

<div class="flex-column">
    <div class="home-text">
        <span style="font-size: 45px;">Ōtākaro Histories</span> <br>
        Aotearoa Histories in the Classroom
    </div>

    <div class="home-section-grid-title">Quick Links</div>

    <div class="home-section-grid">
        <a class="home-section-grid-item" style="background: #80daa5;" href="/posts">
            <i class="fas fa-book"></i>
            <div class="home-section-grid-item-title">
                Browse All Posts
            </div>
        </a>

        <a class="home-section-grid-item" style="background: #5ebfd7;" href="/pages/contact">
            <i class="fas fa-envelope"></i>
            <div class="home-section-grid-item-title">
                Contact
            </div>
        </a>

        <a class="home-section-grid-item" style="background: #64d7e9;" href="/pages/login">
            <i class="fas fa-sign-in-alt"></i>
            <div class="home-section-grid-item-title">
                Login
            </div>
        </a>

        <a class="home-section-grid-item" style="background: #63d8ff;" href="/user/logout">
            <i class="fas fa-sign-out-alt"></i>
            <div class="home-section-grid-item-title">
                Logout
            </div>
        </a>

        <a class="home-section-grid-item" style="background: #56b0c7;" href="/pages/register">
            <i class="fas fa-user-plus"></i>
            <div class="home-section-grid-item-title">
                Register
            </div>
        </a>

        <a class="home-section-grid-item" style="background: #61e498;" href="/create">
            <i class="fas fa-plus"></i>
            <div class="home-section-grid-item-title">
                Create Post
            </div>
        </a>
    </div>

    <div class="home-gallery flex-row" style="padding: 100px; flex-wrap: wrap">
        <div class="home-gallery-index flex-column" style="flex-wrap: wrap">
            <div class="home-gallery-title">Recent Items</div>

            <% for (var i = 0; i < posts.length; i++) { %>
                <div class="home-gallery-item">
                    <div class="home-gallery-item-title"><%= posts[i].title %></div>
                    <div class="home-gallery-item-date"><%= new Date(posts[i].date).toLocaleString() %></div>
                    <a href="/post/<%= posts[i].id %>" class="home-gallery-item-link">View</a>
                </div>
            <% } %>
        </div>

        <div class="home-gallery-content">
            <h1 style="margin: 0; font-weight: 400; font-size: 45px; color: rgb(92, 92, 92);">Ōtākaro Histories</h1>
            <p>
                This website is in heavy development.
                <br>
                Ōtākaro Histories is a website that provides teachers with resources to teach history in the classroom.
                <br>
                You can find more information about the project <a href="/pages/about">here</a>.
            </p>
        </div>
    </div>
</div>

