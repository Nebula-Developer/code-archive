<%- include('../header') %>

<div class="full-page-wrapper" style="margin-top: 50px;">
    <div class="full-page" style="display: flex;">
        <div style="padding: 30px; width: 100%;">
            <h1 style="margin: 0; font-weight: 300;">Login to Ōtākaro Histories</h1>

            <div class="login-form" style="margin-top: 20px;">
                <div class="login-input styled-placeholder">
                    <input type="text" class="login-input styled-placeholder-input" id="login-email" placeholder=" ">
                    <label for="login-email" class="login-label styled-placeholder-label">Email</label>
                </div>

                <div class="login-item styled-placeholder">
                    <input type="password" class="login-input styled-placeholder-input" id="login-password" placeholder=" ">
                    <label for="login-password" class="login-label styled-placeholder-label">Password</label>
                </div>
            </div>

            <div class="login-buttons" style="margin-top: 30px;">
                <button id="login-button" class="button-submit">Login</button>
                <a id="register-button" class="button-text" style="margin-left: 10px;" href="/pages/register">Don't have an account? Register here</a>
            </div>
        </div>

        <div class="colour-box" style="background: linear-gradient(90deg, rgb(255, 255, 255), rgba(116, 131, 247, 0.423), #809aee); min-width: calc(40%); height: 100%;"></div>
    </div>
</div>

<%- include('../footer') %>
 