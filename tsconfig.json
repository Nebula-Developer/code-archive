{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,

    "outDir": "./dist",
    "rootDir": "./",

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "noEmit": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist", "templates"]
}
